{
  "name": "landing-page-cms",
  "version": "1.0.0",
  "services": [
    {
      "type": "app",
      "data": {
        "projectName": "landing-page-cms",
        "serviceName": "landing-page-app",
        "source": {
          "type": "docker",
          "image": "landing-page-cms:latest"
        },
        "domains": [
          {
            "host": "yourdomain.com",
            "port": 3000,
            "https": true
          },
          {
            "host": "www.yourdomain.com",
            "port": 3000,
            "https": true
          }
        ],
        "env": [
          {
            "key": "NODE_ENV",
            "value": "production"
          },
          {
            "key": "NEXT_PUBLIC_APP_URL",
            "value": "https://yourdomain.com"
          },
          {
            "key": "PORT",
            "value": "3000"
          },
          {
            "key": "HOSTNAME",
            "value": "0.0.0.0"
          }
        ],
        "deploy": {
          "replicas": 1,
          "cpuLimit": "0.5",
          "memoryLimit": "512Mi",
          "cpuReservation": "0.1",
          "memoryReservation": "256Mi"
        },
        "healthCheck": {
          "test": ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:3000"],
          "interval": "30s",
          "timeout": "10s",
          "retries": 3,
          "startPeriod": "40s"
        }
      }
    }
  ]
}
